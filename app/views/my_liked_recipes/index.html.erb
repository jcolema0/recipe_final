<div>
  <div>
    <h1>
      List of all my liked recipes
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new my liked recipe
    </h2>

    <form action="/insert_my_liked_recipe" method="post">
      <div>
        <label for="recipe_id_box">
          Recipe
        </label>

        <input type="text" id="recipe_id_box" name="query_recipe_id">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <button>
        Create my liked recipe
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Recipe
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_my_liked_recipes.each do |a_my_liked_recipe| %>
      <tr>
        <td>
          <%= a_my_liked_recipe.id %>
        </td>

        <td>
          <%= a_my_liked_recipe.recipe_id %>
        </td>

        <td>
          <%= a_my_liked_recipe.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_my_liked_recipe.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_my_liked_recipe.updated_at) %> ago
        </td>

        <td>
          <a href="/my_liked_recipes/<%= a_my_liked_recipe.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
