<div>
  <div>
    <h1>
      My liked recipe #<%= @the_my_liked_recipe.id %> details
    </h1>

    <div>
      <div>
        <a href="/my_liked_recipes">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_my_liked_recipe/<%= @the_my_liked_recipe.id %>">
          Delete my liked recipe
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Recipe
      </dt>
      <dd>
        <%= @the_my_liked_recipe.recipe_id %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @the_my_liked_recipe.user_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_my_liked_recipe.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_my_liked_recipe.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit my liked recipe
    </h2>

    <form action="/modify_my_liked_recipe/<%= @the_my_liked_recipe.id %>"  method="post" >
      <div>
        <label for="recipe_id_box">
          Recipe
        </label>

        <input type="text" id="recipe_id_box" name="query_recipe_id" value="<%= @the_my_liked_recipe.recipe_id %>">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_my_liked_recipe.user_id %>">
      </div>

      <button>
        Update my liked recipe
      </button>
    </form>
  </div>
</div>

<hr>
